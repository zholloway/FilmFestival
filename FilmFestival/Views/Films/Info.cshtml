@model FilmFestival.Models.View_Models.FilmInfo
@{
    ViewBag.Title = "Films";
}

<div class="newsBody">
    <div class="newsImage">
        <img src="@Model.InfoImgPath" />
    </div>

    <h2 class="newsFilmTitle"><strong>@Model.Title</strong></h2>
    <div class="filmDetails">
        <span><strong>@Model.YearReleased || DIR. - @Model.Director || @Model.Country || @Model.Runtime MIN.</strong></span>
    </div>      

    @Html.Partial("_socialMediaBar")

    <div class="newsParagraph">
        <h3>Brief Summary</h3>
        @Html.Raw(Model.BriefSummary)

        <h3>Full Description</h3>
        @Html.Raw(Model.FullDescription)
    </div>
        
    <h3 id="newsShowtimesHeader">Showtimes</h3>
    <div class="showtimesAndReservationsContainer">
        <div class="newsShowtimesContainer">
            <div class="newsShowtimesDate">
                <span><strong>Wednesday, September 27<sup>th</sup></strong></span>
            </div>
            <div class="newsWednesdayShowings">
                <div class="newsShowtimesTheatre">
                    <span>Alamo Drafthouse South Lamar</span>
                </div>
                <div class="newsShowtimesTimes">
                    <a href=""><span>8:00,</span></a>
                    <a href=""><span>9:30,</span></a>
                    <a href=""><span>11:00,</span></a>
                    <a href=""><span>1:45,</span></a>
                    <a href=""><span>3:30</span></a>
                </div>

                <div class="newsShowtimesTheatre">
                    <span>Alamo Drafthouse East Central</span>
                </div>
                <div class="newsShowtimesTimes">
                    <a href=""><span>8:00,</span></a>
                    <a href=""><span>9:30,</span></a>
                    <a href=""><span>11:00,</span></a>
                    <a href=""><span>1:45,</span></a>
                    <a href=""><span>3:30</span></a>
                </div>
            </div>

            <div class="newsShowtimesDate">
                <span><strong>Thursday, September 28<sup>th</sup></strong></span>
            </div>
            <div class="newsThursdayShowings">
                <div class="newsShowtimesTheatre">
                    <span>Alamo Drafthouse South Lamar</span>
                </div>
                <div class="newsShowtimesTimes">
                    <a href=""><span>8:00,</span></a>
                    <a href=""><span>9:30,</span></a>
                    <a href=""><span>11:00,</span></a>
                    <a href=""><span>1:45,</span></a>
                    <a href=""><span>3:30</span></a>
                </div>
                <div class="newsShowtimesTheatre">
                    <span>Alamo Drafthouse East Central</span>
                </div>
                <div class="newsShowtimesTimes">
                    <a href=""><span>8:00,</span></a>
                    <a href=""><span>9:30,</span></a>
                    <a href=""><span>11:00,</span></a>
                    <a href=""><span>1:45,</span></a>
                    <a href=""><span>3:30</span></a>
                </div>
            </div>
        </div>

        <div class="newsSeatReservation">
            <span><strong>Click your desired seat for the selected showtime:</strong></span>
            <div id="theatreFloorplan">
                <form id="seatList" method="post" action="">
                    <div class="seatRow">
                        <div class="button1">
                            <input type="radio" id="available1" name="available" value="available" />
                            <label for="available1"><span class="availableSeat"></span></label>
                        </div>  
                        <div class="button2">
                            <input type="radio" id="available2" name="available" value="available" />
                            <label for="available2"><span class="availableSeat"></span></label>
                        </div> 
                        <div class="button3">
                            <input type="radio" id="reserved3" name="available" value="available" />
                            <label for="reserved3"><div class="reservedSeat"></div></label>
                        </div> 
                    </div>
                </form>
            </div>
            <script type="text/javascript">
                $(function) {
                    $('.availableSeat').click(function () {
                        if ($(this).hasClass('availableSeat')) {
                            $(this).addClass('selectedSeat').removeClass('availableSeat');
                        }
                        else {
                            $(this).addClass('availableSeat').removeClass('selectedSeat');
                        }
                    });
                }
            </script>          
            <div id="floorplanLegend">
                <ul id="seatDescription">
                    <li>Available Seat</li>
                    <li>Booked Seat</li>
                    <li>Selected Seat</li>
                </ul>
            </div>
        </div>
    </div>
</div>

