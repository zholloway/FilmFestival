@model FilmFestival.Models.Showtime

@{
    ViewBag.Title = "Showtimes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Film.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Film.Title)
        </dd>

        <dt>
            Date
        </dt>

        <dd>
            @Model.DateAndTime.ToShortDateString()
        </dd>

        <dt>
            Time
        </dt>

        <dd>
            @Model.DateAndTime.ToShortTimeString()
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Theatre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Theatre)
        </dd>

        <dt>
            Reserve List
        </dt>

        <dd>
            <ul>
                @foreach (var item in ViewBag.UserList)
                {
                    <li>
                        @item
                    </li>
                }
            </ul>           
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
