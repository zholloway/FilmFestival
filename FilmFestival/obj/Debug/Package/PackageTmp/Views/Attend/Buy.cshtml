@{
    ViewBag.Title = "Purchase Badge";
}

<div class="newsBody">
    <p>
        Please make a selection for which badge you would like to purchase.
    </p>
    <p>
        We will also need your email address to create your user account and send confirmation of your badge purchase.
    </p>

    <form method="post" action="~/Attend/Success">
        <input type="radio" name="badgeSelection" value="2nd Half Badge" /> 2<sup>nd</sup> Half Badge - $225.00 <br />
        <input type="radio" name="badgeSelection" value="Fan Badge" /> Fan Badge - $425.00 <br />
        <input type="radio" name="badgeSelection" value="Superfan Badge" disabled /> Superfan Badge - $490.00 - <strong>SOLD OUT</strong><br /> <br />
        <strong>Email Address: </strong><input type="text" name="emailAddress" /> <br /> <br />
        <input id="purchaseButton" type="submit" value="Purchase" />
    </form>
</div>

